<Window x:Class="test1.ExplainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test1"
        mc:Ignorable="d"
        Title="ExplainWindow" Height="720" Width="1280">
    <Grid Margin="10,0,10,-6">
        <Grid.Background>
            <ImageBrush ImageSource="Explain_image/explain.png"/>
        </Grid.Background>
        <Button Content="" HorizontalAlignment="Left" Margin="10,595,0,0" VerticalAlignment="Top" Height="63" Width="148" Click="Button_Click" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="Explain_image/START.png"/>
            </Button.Background>
        </Button>
        <Label Content="" HorizontalAlignment="Left" Height="302" Margin="914,337,0,0" VerticalAlignment="Top" Width="346">
            <Label.Background>
                <ImageBrush ImageSource="Explain_image/burger.png" Stretch="Fill"/>
            </Label.Background>
        </Label>
        <Label Content="" HorizontalAlignment="Left" Height="229" Margin="-5,252,0,0" VerticalAlignment="Top" Width="299" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-14.983"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
            <Label.Background>
                <ImageBrush ImageSource="Explain_image/shrimpburger.png" Stretch="Fill"/>
            </Label.Background>
        </Label>
        <Label Content="" HorizontalAlignment="Center" Height="476" VerticalAlignment="Top" Width="892" Margin="0,97,0,0">
            <Label.Background>
                <ImageBrush ImageSource="Explain_image/explaintxt.png" Stretch="Fill"/>
            </Label.Background>
        </Label>
        <Label Content="" HorizontalAlignment="Left" Height="138" Margin="177,49,0,0" VerticalAlignment="Top" Width="110" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-23.773"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
            <Label.Background>
                <ImageBrush ImageSource="Explain_image/fries.png" Stretch="Fill"/>
            </Label.Background>
        </Label>


    </Grid>
</Window>
